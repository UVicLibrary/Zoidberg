<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="text-center">Editing <%= @profile.name %>'s Profile</h1>
      <div class='link-options-wrapper mb-sm-2'>
        <%= link_to('Back to profile', @profile, class: "mr-sm-2") %> |
        <%= link_to('See all profiles', profiles_path, class: "ml-sm-2") %>
      </div>
      <%= render 'form', locals: { profile: @profile } %>
    </div>
  </div>
</div>
