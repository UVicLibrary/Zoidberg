<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="text-center"><%= @profile.name %>'s Profile</h1>
      <div class='link-options-wrapper mb-sm-5'>
        <%= link_to('Edit profile', edit_profile_path(@profile), class: "mr-sm-2") %> |
        <%= link_to('See all profiles', profiles_path, class: "ml-sm-2") %>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
      <div class="col-lg-3 col-md-4 col-6">
        <%= link_to("#", class: "d-block mb-4 light-grey-border", disabled: true) do %>
          <%= image_tag("zoidberg_green.png", class: "img-fluid img-thumbnail no-border") %>
        <% end %>
      </div>
  </div>
  <% if @profile.sound.present? %>
  <div class="row justify-content-center">
    <span class="font-weight-bold mr-sm-2 mb-sm-2">Sound:</span><span><%= File.basename(@profile.sound.url) %></span>
  </div>
  <div class="row justify-content-center">
    <audio controls>
      <source src="<%= @profile.sound.url %>" type="audio/mp3">
      <source src="" type="audio/wav">
      Your browser doesn't support the audio tag.
    </audio>
  </div>
  <% end %>
</div>
