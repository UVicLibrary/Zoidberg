<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="text-center profile-index-header">Select a Profile</h1>
    </div>
  </div>
</div>

<!-- Template from startbootstrap.com/snippets/thumbnail-gallery -->
<div class="container">
  <div class="row justify-content-center">
    <div class="row text-center text-lg-left col-lg-10">
      <% @profiles.each do |profile| %>
          <div class="col-lg-3 col-md-4 col-6">
            <%= link_to(profile, class: "d-block mb-4 text-dark light-grey-border") do %>
              <%= image_tag("zoidberg_green.png", class: "img-fluid img-thumbnail no-border") %>
              <h3 class="text-center"><%= profile.name %></h3>
            <% end %>
          </div>
      <% end %>
  </div>
</div>
