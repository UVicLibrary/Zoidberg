<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="text-center"><%= @document.title %></h1>
      <div class='link-options-wrapper mb-sm-5'>
        <%= link_to('Edit document title', edit_document_path(@document), class: "mr-sm-2") %> |
        <%= link_to('See all documents', documents_path, class: "ml-sm-2") %>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
      <%= render 'shared/show_card' %>
  </div>
  <dl class="row justify-content-center"> <!-- justify-content-center -->
    <div class="col-md-6">
      <div class="col-sm-3">
        <%= link_to "Download", @document.download_url, class: "btn btn-primary" %>
      </div>
    <dt class="col-sm-3 mr-sm-2 mb-sm-2">Uploader</dt><dd class="col-sm-9"><%= @document.profile.name %></dd>
    <dt class="col-sm-3 mr-sm-2 mb-sm-2">Source folder</dt><dd class="col-sm-9"><%= @document.source_path %></dd>

    <!-- <a href="<%#= @document.download_url %>">
      <button type="button" class="btn btn-primary">Download</button>
    </a> -->
  </dl>
</div>
