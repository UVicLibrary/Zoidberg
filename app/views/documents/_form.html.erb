<%= form_with(model: @document, local: true, class: "justify-content-center col-lg-6 offset-lg-3") do |form| %>
  <% if @document.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <p><%= pluralize(@document.errors.count, "error") %> prohibited this document from being saved:</p>
      <ul>
      <% @document.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= label_tag(:title, "Filename for resulting PDF", class: "mr-sm-4 font-weight-bold") %>
    <%= form.text_field :title, class: "form-control col-md-6", placeholder: "Enter document title", id: "title" %>
  </div>

  <div class="form-group">
    <%= label_tag(:source_path, "Folder", class: "mr-sm-4 font-weight-bold") %>
    <p>Zoidberg will make a PDF of all the .tifs in this folder. <a href="#" class="text-info" data-toggle="modal" data-target="#filePathModal">How to get a file path without typing?</a></p>
    <%= form.text_field :source_path, class: "form-control col-md-11", placeholder: "File path to folder (Q:)", id: "source-path" %>
    <small class="form-text text-muted mb-sm-4">
        Zoidberg will use only .tif files and ignore other file extensions.
    </small>
  </div>

  <div class="form-group">
    <div class="form-group">
      <%= label_tag(:email, "Email address", class: "mr-sm-4 font-weight-bold") %>
      <%= form.text_field :email, class: "form-control col-md-6", placeholder: "Enter email", id: "email" %>
    </div>
    <small class="form-text text-muted mb-sm-4">
      Zoidberg will email this address when the PDF is ready.
    </small>
  </div>

  <div class="form-group">
    <%= label_tag(:source_folders, "Folder of Images", class: "mr-sm-4 font-weight-bold") %>
    <%#= form.file_field :source_files, multiple: true %>
    <!-- <input multiple="multiple" type="file" id="filepicker" name="document[source_files][]" webkitdirectory multiple /> -->
    <input type="file" id="filepicker" name="fileList" webkitdirectory multiple />
    <ul id="listing"></ul>
  </div>

  <div class="col-md-12 text-center btn-row">
    <%= form.submit 'Create Document', class: "btn btn-primary", id: "create-document-button" %>
  </div>
<% end %>

<!-- Modal -->
<div class="modal fade" id="filePathModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-large" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Getting file paths from Q:\</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= image_tag('path_docs_bigger.gif') %>
      </div>
      <!-- <div class="modal-footer">
      </div> -->
    </div>
  </div>
</div>



<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" id="folder-picker">
  Select a folder
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-large" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Choose a folder</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <span class="ml-3 mb-2" id="folder-picker-desc">Click on a folder name to expand or hover for more options.</span>
          <div class="folder-picker-container">
            <%= render 'folder_picker' %>
          </div>
      </div>
    </div>
  </div>
</div>


